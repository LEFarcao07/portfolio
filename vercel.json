{
  "version": 2,
  "routes": [
    { "handle": "filesystem" },
    {
      "src": "/offline/service-worker.js",
      "headers": {
        "Service-Worker-Allowed": "/offline/",
        "Cache-Control": "no-cache"
      }
    },
    {
      "src": "/offline/(.*)",
      "dest": "/offline/$1"
    },
    {
      "src": "/",
      "dest": "/offline/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/offline/$1.html",
      "check": true
    },
    {
      "src": "/404",
      "dest": "/offline/404.html",
      "status": 404
    },
    {
      "src": "/(.*)",
      "status": 404,
      "dest": "/offline/404.html"
    }
  ],
  "headers": [
    {
      "source": "/offline/service-worker.js",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache"
        },
        {
          "key": "Service-Worker-Allowed",
          "value": "/offline/"
        }
      ]
    }
  ]
}