{
  "version": 2,
  "routes": [
    { "handle": "filesystem" },
    {
      "src": "/service-worker.js",
      "dest": "/public/service-worker.js",
      "headers": {
        "Service-Worker-Allowed": "/",
        "Cache-Control": "no-cache"
      }
    },
    {
      "src": "/offline",
      "dest": "/public/offline.html"
    },
    {
      "src": "/",
      "dest": "/public/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1.html",
      "check": true
    },
    {
      "src": "/404",
      "dest": "/public/404.html",
      "status": 404
    },
    {
      "src": "/(.*)",
      "status": 404,
      "dest": "/public/404.html"
    }
  ],
  "headers": [
    {
      "source": "/service-worker.js",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache"
        },
        {
          "key": "Service-Worker-Allowed",
          "value": "/"
        }
      ]
    }
  ]
}